<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:text="@string/title_vote_result"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorForegroundLight"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:paddingBottom="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/endscreen_win"

            android:id="@+id/imageview_result" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"

            android:id="@+id/textview_result"

            android:text="VoteResult"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="5dp"
            android:textColor="@color/colorForegroundLight"
            android:background="@color/colorBackgroundDark"/>

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"

            android:id="@+id/button_tomenu"

            android:text="@string/button_vote_menu"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="5dp"
            android:textColor="@color/colorForegroundLight"
            android:background="@color/colorBackgroundDark"/>
    </LinearLayout>

</LinearLayout>